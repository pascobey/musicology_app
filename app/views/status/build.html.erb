
    <h3><%= @header %></h3>
    <!-- status build content container - column -->
    <div id="status-build-content-container" class="d-flex flex-column shadow-lg rounded" style="position:fixed;top:30vh;left:24px;right:24px;background-color:rgb(255,240,245);">
        <div class="d-flex flex-row m-1" style="overflow-x:scroll;">
            <%  i = 1 %>
            <span id="js-click" style="display:none;"><%= "#{@playlist_id}" %></span>
            <% until i == (@playlists.size + 1) %>
                    <% if @playlist_id.to_i > i %>
                        <img src="<%= Playlist.find_by(id: i).playlist_image_url %>" alt="PLAYLIST_IMAGE" class="m-1 shadow-sm" style="height:15vw;width:15vw;">
                    <% elsif @playlist_id.to_i < @playlists.size %>
                        <img src="<%= Playlist.find_by(id: i).playlist_image_url %>" alt="PLAYLIST_IMAGE" class="m-1 shadow-sm" style="height:15vw;width:15vw;filter:grayscale(100%)blur(1px);">
                        <%= link_to "playlist #{i} retrieval", {controller: 'tracks', action: 'create', library_id: @library_id, access_token: @access_token, playlist_id: i, xt: '0'}, id: "#{i}", style: "display:none;" %>
                    <% else %>
                        <img src="<%= Playlist.find_by(id: i).playlist_image_url %>" alt="PLAYLIST_IMAGE" class="m-1 shadow-sm" style="height:15vw;width:15vw;filter:grayscale(100%)blur(1px);">
                        <%# <%= link_to "DONE - go to user", user_path(User.find_by(id: @library_id)), id: "#{i}", style: "display:none;" %> %>
                    <% end %>
                <% i = i.next %>
            <% end %>
        </div>
    </div><!-- status build content container - column -->
<script>
    if (document.getElementById("flash")) {
        document.getElementById("flash").style.removeProperty("margin-top");
    }
    document.getElementById("navbar").remove();
    if (document.getElementById("js-click").innerHTML) {
        setTimeout(function() {
            document.getElementById(document.getElementById("js-click").innerHTML).click();
        }, 1000);
    }
</script>